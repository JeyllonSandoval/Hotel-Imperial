---
import Layout from '../layouts/Layout.astro';
import { AuthProvider } from '../contexts/AuthContext';
import { AuthButton } from '../components/AuthButton';
import { CommentsSection } from '../components/CommentsSection';
import { StatsDashboard } from '../components/StatsDashboard';
---

<Layout title="Hotel Imperial - Comentarios">
	<!-- Header con navegación -->
	<header class="header">
		<div class="container">
			<div class="header-content">
				<div class="logo">
					<h1 class="logo-title">🏨 Hotel Imperial</h1>
					<p class="logo-subtitle">Experiencias que perduran</p>
				</div>
				<AuthButton client:load />
			</div>
		</div>
	</header>

	<!-- Hero Section -->
	<section class="hero">
		<div class="container">
			<div class="hero-content">
				<h2 class="hero-title">Comparte tu Experiencia</h2>
				<p class="hero-description">
					Tu opinión es importante para nosotros. Cuéntanos sobre tu estadía en Hotel Imperial 
					y ayuda a otros huéspedes a descubrir la excelencia de nuestro servicio.
				</p>
				<div class="hero-stats">
					<div class="stat">
						<span class="stat-number">4.8</span>
						<span class="stat-label">Calificación Promedio</span>
					</div>
					<div class="stat">
						<span class="stat-number">1,247</span>
						<span class="stat-label">Comentarios</span>
					</div>
					<div class="stat">
						<span class="stat-number">98%</span>
						<span class="stat-label">Satisfacción</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Dashboard de Estadísticas -->
	<section class="stats-section">
		<div class="container">
			<AuthProvider client:load>
				<StatsDashboard client:load />
			</AuthProvider>
		</div>
	</section>

	<!-- Sección de Comentarios Principal -->
	<section class="comments-main">
		<div class="container">
			<AuthProvider client:load>
				<CommentsSection client:load />
			</AuthProvider>
		</div>
	</section>

	<!-- Footer -->
	<footer class="footer">
		<div class="container">
			<div class="footer-content">
				<div class="footer-section">
					<h3>Hotel Imperial</h3>
					<p>Lujo y comodidad en el corazón de la ciudad</p>
				</div>
				<div class="footer-section">
					<h4>Contacto</h4>
					<p>📞 +1 (555) 123-4567</p>
					<p>✉️ info@hotelimperial.com</p>
				</div>
				<div class="footer-section">
					<h4>Ubicación</h4>
					<p>📍 123 Avenida Principal</p>
					<p>Ciudad, País 12345</p>
				</div>
			</div>
			<div class="footer-bottom">
				<p>&copy; 2024 Hotel Imperial. Todos los derechos reservados.</p>
			</div>
		</div>
	</footer>
</Layout>

<style>
	/* Header */
	.header {
		background-color: var(--color-background);
		border-bottom: 1px solid var(--color-gray-medium);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo-title {
		font-size: 1.8rem;
		font-weight: 700;
		color: var(--color-primary);
		margin: 0;
	}

	.logo-subtitle {
		font-size: 0.9rem;
		color: var(--color-gray-medium);
		margin: 0;
	}

	/* Hero Section */
	.hero {
		background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
		color: var(--color-background);
		padding: 4rem 0;
		text-align: center;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-title {
		font-size: 3rem;
		font-weight: 700;
		margin: 0 0 1.5rem 0;
		letter-spacing: -0.02em;
	}

	.hero-description {
		font-size: 1.25rem;
		margin: 0 0 3rem 0;
		opacity: 0.95;
		line-height: 1.6;
	}

	.hero-stats {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-top: 3rem;
	}

	.stat {
		text-align: center;
	}

	.stat-number {
		display: block;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-background);
		margin-bottom: 0.5rem;
	}

	.stat-label {
		font-size: 0.9rem;
		opacity: 0.9;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	/* Stats Section */
	.stats-section {
		padding: 3rem 0;
		background-color: var(--color-background);
	}

	/* Comments Section */
	.comments-main {
		padding: 4rem 0;
		background-color: var(--color-background);
		min-height: 60vh;
	}

	/* Footer */
	.footer {
		background-color: var(--color-gray-dark);
		color: var(--color-text);
		padding: 3rem 0 1rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.footer-section h3,
	.footer-section h4 {
		color: var(--color-primary);
		margin: 0 0 1rem 0;
		font-size: 1.2rem;
	}

	.footer-section p {
		margin: 0.5rem 0;
		color: var(--color-gray-medium);
	}

	.footer-bottom {
		border-top: 1px solid var(--color-gray-medium);
		padding-top: 1rem;
		text-align: center;
	}

	.footer-bottom p {
		margin: 0;
		color: var(--color-gray-medium);
		font-size: 0.9rem;
	}

	/* Container */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.header-content {
			flex-direction: column;
			gap: 1rem;
		}

		.hero-title {
			font-size: 2.2rem;
		}
		
		.hero-description {
			font-size: 1.1rem;
		}

		.hero-stats {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.stat-number {
			font-size: 2rem;
		}
		
		.container {
			padding: 0 1rem;
		}

		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}
	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 1.8rem;
		}

		.hero-description {
			font-size: 1rem;
		}

		.logo-title {
			font-size: 1.5rem;
		}
	}
</style>
