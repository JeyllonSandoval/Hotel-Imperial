<style>
	.test-page {
		min-height: 100vh;
		background-color: var(--color-background);
		padding: 2rem 0;
	}
	
	.test-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-primary);
		text-align: center;
		margin-bottom: 1rem;
	}
	
	.test-description {
		font-size: 1.2rem;
		color: var(--color-text);
		text-align: center;
		margin-bottom: 3rem;
		opacity: 0.9;
	}
	
	.test-sections {
		display: grid;
		gap: 2rem;
		margin-bottom: 3rem;
	}
	
	.test-section {
		background-color: var(--color-gray-dark);
		border-radius: 12px;
		padding: 2rem;
		border: 1px solid var(--color-gray-medium);
	}
	
	.test-section h2 {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--color-primary);
		margin-bottom: 1.5rem;
	}
	
	.test-info {
		background-color: var(--color-gray-dark);
		border-radius: 12px;
		padding: 2rem;
		border-left: 4px solid var(--color-primary);
	}
	
	.test-info h3 {
		font-size: 1.3rem;
		font-weight: 600;
		color: var(--color-primary);
		margin-bottom: 1rem;
	}
	
	.test-info ul {
		list-style: none;
		padding: 0;
	}
	
	.test-info li {
		padding: 0.5rem 0;
		color: var(--color-text);
		font-size: 1.1rem;
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	
	@media (max-width: 768px) {
		.test-title {
			font-size: 2rem;
		}
		
		.test-description {
			font-size: 1rem;
		}
		
		.container {
			padding: 0 1rem;
		}
	}
</style>
